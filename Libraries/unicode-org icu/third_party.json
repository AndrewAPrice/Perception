{
    "repositories" : [
        {
            "url": "https://github.com/unicode-org/icu.git",
            "type": "git",
            "placeholder": "git"
        }
    ],
    "operations" : [
        {
            "operation": "copy",
            "source": "${git}/icu4c/source/common/",
            "destination": "source/common"
        },
        {
            "operation": "copy",
            "source": "${git}/icu4c/source/common/unicode",
            "destination": "public/unicode",
            "extension": [".h"]
        },
        {
            "operation": "copy",
            "source": "${git}/icu4c/source/i18n",
            "destination": "source/common"
        },
        {
            "operation": "copy",
            "source": "${git}/icu4c/source/i18n/unicode",
            "destination": "public/unicode",
            "extensions": [".h"]
        },
        {
            "operation": "copy",
            "source": "${git}/icu4c/source/layoutex",
            "destination": "source/common"
        },
        {
            "operation": "copy",
            "source": "${git}/icu4c/source/layoutex/layout",
            "destination": "public/layout",
            "extensions": [".h"]
        },
        {
            "operation": "copy",
            "source": "${git}/icu4c/source/stubdata",
            "destination": "source/stubdata"
        },
        {
            "operation": "copy",
            "source": "third_party/icudt72l.dat",
            "destination": "assets/icudt72l.dat"
        }
    ]
}